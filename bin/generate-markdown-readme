#!/bin/bash
set -eu
(
# go to the root directory of the project
pushd "$(dirname $0)/.." > /dev/null

# get the project venv
PYTHON="$(pipenv --venv)/bin/python"
export PYTHONPATH=$(pwd)${PYTHONPATH:+:$PYTHONPATH}

# go back to the calling directory
popd > /dev/null

# call generate_markdown_readme.py
"$PYTHON" "$(dirname $0)/../scripts/generate_markdown_readme.py" $@
)
